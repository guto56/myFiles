function addWork(){
    const divTarefas = document.getElementById('tarefasDiv');

    const section = document.createElement('section');
    section.id = 'divDasTarefas'

    const nomeTarefa = document.createElement('h3');
    nomeTarefa.innerText = 'Título: ' + prompt('Qual o nome da Tarefa?');
    nomeTarefa.id = 'nomeDaTarefa';

    const descTarefa = document.createElement('p');
    descTarefa.innerText = 'Descrição: ' + prompt('O que precisa ser feito?');
    descTarefa.id = 'descDaTarefa';

    section.append(nomeTarefa, descTarefa);

    divTarefas.append(section);
}